{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign bg_color = section.settings.bg_color

    if section.settings.bg_gradient
        assign bg_color = bg_color | append: ' bg-gradient'
    endif

    case section.settings.img_orientation
        when 'square'
            assign img_width  = 900
            assign img_height = 900
        when 'landscape'
            assign img_width  = 900
            assign img_height = 720
        when 'landscape-x2'
            assign img_width  = 900
            assign img_height = 600
        when 'potrait'
            assign img_width  = 720
            assign img_height = 900
        when 'potrait-x2'
            assign img_width  = 600
            assign img_height = 900
    endcase
%}

<section 
    id="image-with-text-{{ section.id }}" 
    class="image-with-text enter-view overflow-hidden {{ bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }}">
        <div class="mx-auto" style="max-width: {{ section.settings.max_width }}px;">
            <div class="row align-items-center {{ section.settings.img_align_desktop }}">
                 <div class="col-lg-{% if section.settings.img_size_desktop == '1/2' %}6{% else %}4{% endif %} mb-6 mb-lg-0">
                    <div 
                        class="animate__animated animate__faster opacity-0"
                        data-animate-class="animate__fadeIn"
                        style="animation-delay: 0ms">
                        {% if section.settings.image == blank %}
                            {{ 'image' | placeholder_svg_tag }}
                        {% else %}
                            <img
                                class="img-fluid rounded w-100 {{ section.settings.img_thumbnail }}"
                                src="{{ section.settings.image.src | image_url: width: img_width, height: img_height, crop: section.settings.img_crop }}"
                                alt="{{ section.settings.image.alt | escape }}"
                                width="{{ img_width }}"
                                height="{{ img_height }}"
                                loading="lazy">
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-{% if section.settings.img_size_desktop == '1/2' %}6{% else %}8{% endif %}">
                    {% unless section.settings.subtitle == blank %}
                        <div 
                            class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                            data-animate-class="{{ section.settings.animation }}"
                            style="animation-delay: 400ms;">
                            <p class="subtitle text-uppercase fw-500 mb-3 text-muted {{ section.settings.subtitle_size }}">
                                {{ section.settings.subtitle }}
                            </p>
                        </div>
                    {% endunless %}
                    {% unless section.settings.title == blank %}
                        <div 
                            class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                            data-animate-class="{{ section.settings.animation }}"
                            style="animation-delay: 600ms;">
                            <h2 class="title mb-4 {{ section.settings.title_size }}">
                                {{ section.settings.title }}
                            </h2>
                        </div>
                    {% endunless %}
                    {% unless section.settings.description == blank %}
                        <div 
                            class="{% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                            data-animate-class="{{ section.settings.animation }}"
                            style="animation-delay: 800ms;">
                            <div class="description rte mb-7 {{ section.settings.description_size }}">
                                {{ section.settings.description }}
                            </div>
                        </div>
                    {% endunless %}
                    {% unless section.settings.btn_text == blank %}
                        <div 
                            class="d-inline-flex {% unless section.settings.animation == '' %}animate__animated opacity-0 {{ section.settings.animation_speed }}{% endunless %}"
                            data-animate-class="{{ section.settings.animation }}"
                            style="animation-delay: 1000ms;">
                            <a 
                                class="btn {{ section.settings.btn_color }} {{ section.settings.btn_size }}"
                                href="{{ section.settings.btn_url }}">
                                {{ section.settings.btn_text }}
                            </a>
                        </div>
                    {% endunless %}
                </div>
            </div>
        </div>
    </div>
</section>

